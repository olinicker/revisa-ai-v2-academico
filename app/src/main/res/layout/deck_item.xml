<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/input_field_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDeckName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Deck"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewCardCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 flashcards"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_input_hint"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
